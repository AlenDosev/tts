{
  // https://v3.nuxtjs.org/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "composite": true,
    "moduleResolution": "node",
    "verbatimModuleSyntax": false
  },
  "exclude": ["*.cjs"],
  "include": ["app/**/*", ".nuxt/types/*", "i18n", "app/types"]
}
